<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ContentText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">Roboto</item>
    </style>

    <style name="micImage">
        <item name="android:layout_width">@dimen/xxl_view</item>
        <item name="android:layout_height">@dimen/xxl_view</item>
        <item name="android:src">@drawable/microphone</item>
        <item name="android:layout_margin">@dimen/large_margin</item>
        <item name="android:contentDescription">@string/description</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

</resources>
